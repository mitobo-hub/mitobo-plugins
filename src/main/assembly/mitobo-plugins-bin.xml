<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>target/mitobo-plugins-${project.version}.jar</source>
      <outputDirectory>plugins</outputDirectory>
      <destName>mitobo_plugins.jar</destName>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>LICENSE*</include>
        <include>README*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>share/scripts</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>oprunner.sh</include>
        <include>run.sh</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../export/intlibs</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../macros/toolsets</directory>
      <outputDirectory>macros/toolsets</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../export/share/docu</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../export/share/scripts/R</directory>
      <outputDirectory>share/scripts/R</outputDirectory>
      <includes>
        <include>MTB*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../export/share/testimages</directory>
      <outputDirectory>testimages</outputDirectory>
      <includes>
        <include>scratch_example1.tif</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>plugins/jars</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <!-- it is unclear why, but "loci_tools" triggers redundant dependencies ImageJ complains about... -->
      <excludes>
<!--
	<exclude>loci:bio-formats:jar:*</exclude>
	<exclude>loci:loci_plugins:jar:*</exclude>
	<exclude>de.unihalle.informatik.Alida:alida-help</exclude>
-->
	<exclude>de.unihalle.informatik.MiToBo.native:mitobo-native-${native.libdir}:jar:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
